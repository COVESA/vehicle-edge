{
    "loglevel": "INFO",
    "can": [
        {
            "interface": "mock",
            "signals": {
				"42.Speed": {
					"min": -15,
					"max": 250,
					"maxDelta": 5,
					"intervalMs": 1000,
					"jitterMs": 500
				}
            }
        }
    ],
    "protocolGateway": {
        "adapters": [
            {
                "platform": true,
                "module": {
                    "name": ".util.mqtt_client",
                    "class": "MqttProtocolAdapter"
                },
                "config": {
                    "topicNamespace": "hal/",
                    "mqtt5Only": false,
                    "brokerUrl": "mqtt://mosquitto-local:1883"
                }
            }
        ]
    }
}
